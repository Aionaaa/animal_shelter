<h1>Assign <%= @familiar.name %> to a Witch </h1>

<form action="/familiars/<%= @familiar.id %>/assign" method="post">


<input type="hidden" name="name" value="<%= @familiar.name %>">
<input type="hidden" name="species" value="<%= @familiar.species %>">
<input type="hidden" name="admission_date" value="<%= @familiar.admission_date %>">
<input type="hidden" name="adoptable" value="<%= @familiar.adoptable %>">

  <label>
    Select a witch:
    <select name="owner_id">
      <% for witch in @witches %>
      <option value="<%= witch.id %>"><%= witch.format_name %></option>
      <% end %>
    </select>
  </label>

  <input class="btn btn--action" type='submit' value="OK">
</form>
